<Page x:Class="BooksKuznetsovSmirnov.View.Pages.ListViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BooksKuznetsovSmirnov.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListViewPage">

    <Grid>
        <ListView Name="BookLv">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="№" DisplayMemberBinding="{Binding Rank}"/>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Header="Автор" DisplayMemberBinding="{Binding Author}"/>
                    <GridViewColumn Header="Год публикации" DisplayMemberBinding ="{Binding Published}"/>
                    <GridViewColumn Header="Страна" DisplayMemberBinding="{Binding Country.Name}"/>
                    <GridViewColumn Header="Оригинальный язык" DisplayMemberBinding="{Binding OriginalLanguage.Name }"/>
                    <GridViewColumn Header="Колличество страниц" DisplayMemberBinding="{Binding PageRange }"/>
                    <GridViewColumn Header="Колличество слов" DisplayMemberBinding="{Binding WordCount }"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        
    </Grid>
</Page>
